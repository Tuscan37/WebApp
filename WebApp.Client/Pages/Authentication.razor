@page "/authentication/{action}"
@using System.Security.Claims
@inject AuthenticationStateProvider AuthProvider
@inject HttpClient HttpCLient
@inject UserService UserService
@inject NavigationManager Navigation
<RemoteAuthenticatorView Action="@Action" OnLogInSucceeded="@OnLoginSuccess"/>


@code {
    [Parameter]
    public string? Action { get; set; }

    private async Task OnLoginSuccess(RemoteAuthenticationState obj)
    {
        var authState = await AuthProvider.GetAuthenticationStateAsync();
        var newClaim = new Claim("CUSTOM_CLAIM", "VALUE_FOR_CUSTOM_CLAIM");
        ((ClaimsIdentity)authState.User.Identity!).AddClaim(newClaim);
        
        // insert claims or something
        //await UserService.LoginGoogle();
    }

}